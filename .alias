#
# ~/.alias 
#

alias rm="rm -I"
alias cp='cp -i'
alias mv='mv -i'

alias ls="ls --color=auto"
alias l="exa"
alias ll="exa -l"
alias la="exa -laa"

alias hx=helix
alias cd=z

alias dotconfig='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'
alias bltc="bluetoothctl power on && bluetoothctl connect"
